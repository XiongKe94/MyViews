<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TagFlowLayout">
        <attr name="item_space" format="dimension" />
        <attr name="line_space" format="dimension" />
        <attr name="max_lines" format="integer" />
    </declare-styleable>

    <declare-styleable name="ArrowImageView">
        <attr name="state">
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="top" value="3" />
        </attr>
        <attr name="arrowColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RatingStarView">
        <attr name="rsv_starMargin" format="integer|dimension" />
        <attr name="rsv_cornerRadius" format="float|dimension" />
        <attr name="rsv_starForegroundColor" format="color|reference" />
        <attr name="rsv_starBackgroundColor" format="color|reference" />
        <attr name="rsv_strokeColor" format="color|reference" />
        <attr name="rsv_strokeWidth" format="float|dimension" />
        <attr name="rsv_starNum" format="integer" />
        <attr name="rsv_rating" format="float" />
        <attr name="rsv_starThickness" format="float|fraction" />
        <attr name="rsv_drawStrokeForEmptyStar" format="boolean" />
        <attr name="rsv_drawStrokeForFullStar" format="boolean" />
        <attr name="rsv_drawStrokeForHalfStar" format="boolean" />
        <attr name="rsv_enableSelectRating" format="boolean" />
        <attr name="rsv_onlyHalfStar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GradualTextView">
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="text_origin_color" format="color|reference" />
        <attr name="text_change_color" format="color|reference" />
        <attr name="bgd_change_color" format="color|reference" />
        <attr name="bgd_origin_color" format="color|reference" />
        <attr name="progress_color" format="color|reference" />
        <attr name="progress_max" format="integer" />
        <attr name="progress" format="integer" />
    </declare-styleable>

    <declare-styleable name="AHBottomNavigationBehavior_Params">
        <attr name="tabLayoutId" format="reference" />
        <attr name="selectedBackgroundVisible" format="boolean" />
        <attr name="translucentNavigationEnabled" format="boolean" />
        <attr name="colored" format="boolean" />
        <attr name="accentColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="disableColor" format="color" />
        <attr name="coloredActive" format="color" />
        <attr name="coloredInactive" format="color" />
    </declare-styleable>
</resources>